# Using postgis/postgis as a base image
FROM postgis/postgis

# Updating packages and installing necessary dependencies
RUN apt-get update && \
    apt-get install -y nano libgdal-dev binutils libproj-dev gdal-bin python3 postgresql-client && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Copying app and data into the container
COPY app/ /app/
COPY data/ /data/

# Set up entrypoint script
COPY docker-entrypoint.sh /docker-entrypoint.sh
RUN chmod +x /docker-entrypoint.sh

# Start entrypoint script
CMD ["/docker-entrypoint.sh"]
